<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coreBackground"
    tools:context=".PayOutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


    <ImageButton
        android:id="@+id/buttonBackPayout"
        android:layout_width="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:elevation="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="@drawable/profileditextshape"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:text="Naval Prakash" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/profileditextshape"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Address" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:ems="10"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:text="India, Uttar Pradesh" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:elevation="5dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/profileditextshape"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Phone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:text="234323454324" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/profileditextshape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Payment" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_marginRight="40dp"
            android:layout_height="90dp"
            android:src="@drawable/cod"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:elevation="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="@drawable/profileditextshape"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Total Amount" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="end"
            android:inputType="none"
            android:paddingEnd="32dp"
            android:text="$57"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/placeMyOrder"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/maroonbutton"
        android:text="PLACE MY ORDER"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartRecyclerView" />
    </LinearLayout>


</FrameLayout>
